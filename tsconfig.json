{
  "compilerOptions": {
    "target": "ES2020", // Use the latest ECMAScript version
    "module": "CommonJS", // Set to 'CommonJS' for Node.js
    "rootDir": "src", // Your source files
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    // "typeRoots": ["./@types", "./node_modules/@types"],
    "outDir": "dist", // Where compiled files go
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Enable compatibility with CommonJS
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Ensure consistent casing in imports
  },
  "include": ["src", "src/app.ts", "src/server.ts.ts", "src/**/*.ts"], // Include the source folder for compilation
  "exclude": ["node_modules"]
}
